{
	"name": "sl",
	"displayName": "sl",
	"description": "sl for vscode",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.69.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:sl.run"
	],
	"main": "./src/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "sl.run",
				"title": "sl",
				"category": "sl"
			}
		],
		"configuration": {
			"title": "sl",
			"properties": {
				"sl.windowWidth": {
					"type": "number",
					"description": "Specify sl window width",
					"default": 80
				},
				"sl.refreshRateMs": {
					"type": "number",
					"description": "Set the drawing interval milliseconds",
					"default": 40
				},
				"sl.futureworks.slType": {
					"type": "string",
					"enum": [
						"D51",
						"SL",
						"C51"
					],
					"default": "D51",
					"description": "Select SL type"
				},
				"sl.futureworks.accident": {
					"type": "boolean",
					"description": "",
					"default": false
				},
				"sl.futureworks.fly": {
					"type": "boolean",
					"description": "",
					"default": false
				}
			}
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.69.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"eslint": "^8.16.0",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"typescript": "^4.7.2",
		"@vscode/test-electron": "^2.1.3"
	}
}